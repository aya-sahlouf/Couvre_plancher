@model List<CommandeModel>;
<div class="table-responsive">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Nom Client</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom Couvre</th>
                   <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date de commande</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Cr√©e En</th>
                 <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Modifier En</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
              </tr>
              </thead>
              <tbody>
                 @foreach (var item in Model)
                        {
                <tr>
                  <td>
                  
                  <div class=" justify-content-center text-center">
                        <h6 class="text-xs font-weight-bold">@item.id_client.nom
                        </h6>
                      </div>
                       
                  </td>
                  <td>
                     <div class=" justify-content-center text-center">
                        <h6 class="text-xs font-weight-bold">@item.id_couvre.Nom
                        </h6>
                      </div>
                    
                  </td>
                  <td class="align-middle text-center text-sm">
                    <span class="text-xs font-weight-bold"> @item.date_cmd</span>
                  </td>
                  
                   <td class="align-middle text-center text-sm">
                    <span class="text-xs font-weight-bold"> @item.CreatedAt</span>
                  </td>
                    <td class="align-middle text-center text-sm">
                    <span class="text-xs font-weight-bold"> @item.UpdatedAt</span>
                  </td>
                    
                  <td>
                       <a asp-controller="superviseur" asp-action="Delete_Commande" asp-route-id="@item.Id_cmd">

                      <i class="fa-solid fa-trash close1_class" style="cursor: pointer; color:red"></i>
                    </a>
                  </td>
                </tr>
           
                        }
              </tbody>
                 
            </table>
          </div>