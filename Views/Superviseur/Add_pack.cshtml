@{
    var Couvres = ViewBag.Couvre as List<CouvreplancherModel>;}


@{
    ViewData["Title"] = "Display Pack Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Pack</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Add_pack">
                    <div class="form-group">
                        <label for="exampleFormControlInput1" >superficie</label>
                        <input type="number" class="form-control"  id="exampleFormControlInput1" placeholder="Saisir la superficie">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1" >reduction</label>
                        <input type="number" class="form-control"  id="exampleFormControlInput1" placeholder="saisir la reduction">
                    </div>
                    <div class="form-group">
                        <label >Nom du couvre:</label>
                        <select  class="form-control">
                            @if (ViewBag.Couvre != null)
{
                            @foreach (var item in ViewBag.Couvre)
                            {
                                <option value="@item.Id_couvre">@item.Nom</option>
                            }}
                        </select>
                    </div>
                    <div class="modal-footer">
                        
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
