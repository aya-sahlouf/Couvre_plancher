
@{
  var couvre = ViewBag.couvre as List<CouvreplancherModel>;
}
<div class=" p-5 container-fluid  text-center shadow-lg text-white" style=
"background-image: url('images/home.jpg');background-size: cover;
    height: 70vh;">
    <h1 class="mb-3 h2 pt-5"> <i>Trouver votre plaisir chez nous</h1>
    </i>
    <p>
        Votre comfort Notre Passion !
    </p>
</div>
<div class="container text-center mt-5 my-4">
    <h1 class="font-weight-light pb-3 col-t">Nos offres du moment</h1>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            
        <div class="col-lg-12 col-xl-12">
                                                <!-- Draggable Without Images card start -->
                                                <div class="card">
                                                   
                                             
                                                    <div class="card-block">
                                                        <div class="row" id="sortable">
                                                            
                                                            @foreach (var item in couvre)
                                                            { <div class="col-md-4 m-b-20" draggable="false" style="">
                                                                
                                                                <div class="card-sub">
                                                                    <img class="card-img-top " height="250px" src="@item.image_couvre" alt="Card image cap">
                                                                    <div class="card-block h-25">
                                                                        <h4 class="card-title">@item.Nom</h4>
                                                                     
                                                                    </div>
                                                                </div>
                                                               </div>
                                                            }
                                                           
                                                          
                                                            
                                                           
                                                           
                                                           
                                                       
                                                           
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- Draggable Without Images card end -->
                                            </div>
        
            
        </div>
        </div>
        </div>

</div>
